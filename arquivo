import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Paths;
import java.nio.file.StandardOpenOption;

public class EscreverArquivo {

    public static void main(String[] args) {
        String filename = "teste.txt";
        String mensagemInicial = "Olá arquivo";
        String novaMensagem = "\nAdicionando uma nova linha no arquivo";

        try {
            Files.write(Paths.get(filename), mensagemInicial.getBytes());
        } catch (IOException e) {
            System.out.println("Erro ao salvar arquivo");
            e.printStackTrace();
        }

        try {
            Files.write(Paths.get(filename), novaMensagem.getBytes(), StandardOpenOption.APPEND);
        } catch (IOException e) {
            System.out.println("Erro ao adicionar informações no arquivo");
            e.printStackTrace();
        }
    }
}
